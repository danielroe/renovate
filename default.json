{
  "default": {
    "description": "Useful renovate config rules",
    "extends": [
      "config:base",
      ":labels(dependencies, chore)",
      ":automergeMinor",
      ":maintainLockFilesWeekly",
      ":widenPeerDependencies",
      ":semanticCommitTypeAll(chore)"
    ],
    "meteor": {
      "enabled": false
    },
    "rangeStrategy": "bump",
    "npm": {
      "commitMessageTopic": "{{prettyDepType}} {{depName}}"
    },
    "packageRules": [
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "automerge": true
      },
      {
        "groupName": "vite dependencies",
        "groupSlug": "vite",
        "matchPackageNames": [
          "vite"
        ],
        "matchPackagePatterns": [
          "^@vitejs/",
          "^vite-"
        ],
        "automerge": true
      },
      {
        "extends": [
          "packages:test"
        ],
        "matchPackageNames": [
          "c8",
          "happy-dom",
          "jsdom",
          "vitest"
        ],
        "matchPackagePatterns": [
          "^@vitest/"
        ],
        "automerge": true,
        "groupName": "test packages"
      },
      {
        "matchPackagePatterns": [
          "release-it"
        ],
        "automerge": true,
        "groupName": "release-it"
      },
      {
        "extends": [
          "packages:linters"
        ],
        "automerge": true,
        "matchPackageNames": [
          "commitlint"
        ],
        "groupName": "all linters"
      },
      {
        "groupName": "nuxt core",
        "groupSlug": "nuxt",
        "matchPackageNames": [
          "nuxt",
          "nuxt3"
        ],
        "matchPackagePatterns": [
          "^@nuxt/"
        ]
      }
    ]
  }
}
